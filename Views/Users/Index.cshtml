@model List<GlobalSoporte.NET.Models.Users>

@{
    ViewBag.Title = "Gestion de Usuarios";
}

<h2><img src="~/Images/users.png" alt="Foto de Usuarios" height="40" width="45" />  Gestion de Usuarios de la Aplicación  </h2>
<div class="text-left">
    <a href="" id="botnuevo" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="UsersRegister">
        <span class="glyphicon glyphicon glyphicon-plus"></span> Crear Usuario
    </a>
</div><br/>

<table class="table">
    <tr>
        <th>Codigo</th>
        <th>Nombre Usuario</th>
        <th>Departamento</th>
        <th>Cargo</th>
        <th>Rol</th>
        <th>Acción Menú</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.UserId)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Departamento)</td>
            <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
            <td>@Html.DisplayFor(modelItem => item.Role)</td>
            <td>
                <span class="glyphicon glyphicon glyphicon-pencil"></span> @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                <span class="glyphicon glyphicon glyphicon-info-sign"></span> @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
                <span class="glyphicon glyphicon glyphicon-trash"></span> @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
            </td>

        </tr>
    }
</table>
<strong>Numero de Registro: </strong>


<!-- FORMULARIUO MODAL PARA REGISTRAR USUARIOS -->
<div id="ModalLoginForm" class="modal fade" >
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                 <h3 class="text-center"><span class="glyphicon glyphicon glyphicon-user"></span> Registrar Usuario </h3>
            </div>
            <div class="modal-body">
                <form role="form" method="POST" action="">
                    <input type="hidden" name="_token" value="">
                    <div class="form-group">
                        <label class="control-label">Nombre Usuario:</label>
                        <div>
                            <input type="text" class="form-control input-sm" name="txtname" value="" placeholder="Nombre">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Cargo:</label>
                        <div>
                            <input type="text" class="form-control input-sm" name="txtcargo" value="" placeholder="Cargo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="sel1">Seleccione Departamento:</label>
                        <select class="form-control input-sm" id="sel1">
                            <option>Administracion</option>
                            <option>Sistemas</option>
                            <option>Recursos Humano</option>
                            <option>Operaciones</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="sel1">Seleccione Rol Usuario:</label>
                        <select class="form-control input-sm" id="sel1">
                            <option>Super Administrador</option>
                            <option>Administrador</option>
                            <option>Usuario General</option>
                            <option>Invitado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="sel1">Seleccione Mapa Pagina:</label>
                        <select class="form-control input-sm" id="sel1">
                            <option>General Usuario</option>
                            <option>Mapas Administradores</option>
                            <option>Mapa Invitados</option>
                            <option>Mapa Acciones Minimas</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Correo Electronico:</label>
                        <div>
                            <input type="email" class="form-control input-sm" name="password" placeholder="Correo Electronico:">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Password:</label>
                        <div>
                            <input type="password" class="form-control input-sm" name="password" placeholder="Introduzca Password:">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Repetir Password:</label>
                        <div>
                            <input type="password" class="form-control input-sm" name="password" placeholder="Comprobar Password:">
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div>
                            <button type="submit" class="btn btn-success"> Guardar Datos </button>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->




@section Scripts{
    <script type="text/javascript">
        $('#botnuevo').click(function () {
            $('#ModalLoginForm').modal('show');
        });
    </script>
}


